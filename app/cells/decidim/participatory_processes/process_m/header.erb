<div class="card__header">
  <% if display_emitter(model) %>
    <div class="row emitter-header">
      <div class="large-4 small-12 columns">
        <%= display_emitter(model).try(:[], :picture) %>
      </div>
      <div class="small-12 large-8 columns">
        <%= display_emitter(model).try(:[], :text) %>
      </div>
    </div>
  <% end %>
  <% if model.try(:linked_assemblies).present? %>
    <div class="linked_assemblies">
      <% model.linked_assemblies.each do |assembly| %>
        <%= link_to decidim_assemblies.assembly_path(assembly), class: "linked_assembly" do %>
          <%= translated_attribute(assembly.title) %>
        <% end %>
      <% end %>
    </div>
  <% end %>
  <% if has_link_to_resource? %>
    <%= link_to resource_path, class: "card__link" do %>
      <h5 class="card__title">
        <%= title %>
      </h5>
    <% end %>
  <% else %>
    <div class="card__link">
      <h5 class="card__title">
        <%= title %>
      </h5>
    </div>
  <% end %>
  <%= render_authorship if has_authors? %>

</div>
