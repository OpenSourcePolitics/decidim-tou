<div class="column" id="<%= dom_id(model) %>">
  <div class="card <%= card_classes %>">

    <%= render :label if has_label? %>
    <%= render :top if render_top? %>
    <%= render :image if has_image? %>

    <div class="card__content">
      <% if model.is_a? Decidim::ParticipatoryProcess %>
        <% if linked_assemblies.present? && model.display_linked_assemblies? %>
          <div class="linked_assemblies">
            <% linked_assemblies.each do |assembly| %>
              <%= link_to decidim_assemblies.assembly_path(assembly), class: "linked_assembly" do %>
                <%= translated_attribute(assembly.title) %>
              <% end %>
            <% end %>
          </div>
        <% end %>
      <% end %>
      <%= render :header if has_header? %>

      <div class="card__text">
        <div class="card__text--paragraph">
          <%= render :badge if has_badge? %>
          <%= description %>
        </div>
      </div>

      <%= render :tags %>
    </div>

    <%= render :data %>
    <%= render :status %>
    <%= render :footer %>
  </div>
</div>
